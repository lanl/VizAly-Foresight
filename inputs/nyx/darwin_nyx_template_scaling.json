{
	"project-home" : "/projects/exasky/pascal-projects/VizAly-CBench/",
	"wflow-path": "nyx_ADD_NAME_HERE",
	"foresight-home" : "ADD_HERE",

	"input": 
	{
		"filetype": "NYX",
		"filename": "/projects/exasky/pascal-projects/VizAly-CBench/testing/data/z255_32.h5",  


		"group" : "native_fields",
		"scalars": [ "baryon_density", "dark_matter_density", "temperature", "velocity_x", "velocity_y", "velocity_z" ],

		"uncompressed": 
		[
			{
				"group": "domain",
				"attributes": [
					{
						"name": "shape",
						"type": "int",
						"size": 3
					},
					{
						"name": "size",
						"type": "double",
						"size": 3
					}
				]
			},

			{
				"group": "universe",
				"attributes": 
				[
					{
						"name": "hubble",
						"type": "double",
						"size": 1 
					},

					{
						"name": "omega_b",
						"type": "double",
						"size": 1
					},

					{
						"name": "omega_l",
						"type": "double",
						"size": 1
					},

					{
						"name": "omega_m",
						"type": "double",
						"size": 1
					},

					{
						"name": "redshift",
						"type": "double",
						"size": 1
					}
				]
			}
		]
	},

	"compressor-comment" : "which compressors to test",
	"compressors" : 
	[

	],

	
	"cbench": 
	{
		"path" : "mpirun $foresight-home$build/CBench",

		"output" :
		{
			"run-path" : "/projects/exasky/VizAly-CBench/build/",

			"output-decompressed": true,
			"output-decompressed-location" : "decompressed_files",
			
			"logfname-comment": "name of output log file",
			"log-file" : "runlog_",

			"metricsfname-comment": "name of file with output",
			"metrics-file" : "metrics_"
		},


		"metrics": 
		[
			{
				"name" : "absolute_error"
			},

			{
				"name" : "relative_error"
			},

			{
				"name" : "mse"
			},

			{
				"name" : "psnr"
			}
		],

		"evn_path": "scripts/VizAly-CBench.bash.darwin",

		"configuration": 
		{
			"partition": "scaling",
			"nodes": 1,
			"ntasks-per-node": 16
		}
	},


	"pat" :
	{
		"evn_path" : "/projects/exasky/HACC.darwin_setup",

