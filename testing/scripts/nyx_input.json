{
	"project-home": "",
	"input": {
		"filetype": "NYX",
		"filename": "../testing/data/z255_32.h5",
		"group": "native_fields",
		"scalars": [
			"baryon_density",
			"dark_matter_density",
			"temperature",
			"velocity_x",
			"velocity_y",
			"velocity_z"
		],
		"uncompressed": [{
				"group": "domain",
				"attributes": [{
						"name": "shape",
						"type": "int",
						"size": 3
					},
					{
						"name": "size",
						"type": "double",
						"size": 3
					}
				]
			},
			{
				"group": "universe",
				"attributes": [{
						"name": "hubble",
						"type": "double",
						"size": 1
					},
					{
						"name": "omega_b",
						"type": "double",
						"size": 1
					},
					{
						"name": "omega_l",
						"type": "double",
						"size": 1
					},
					{
						"name": "omega_m",
						"type": "double",
						"size": 1
					},
					{
						"name": "redshift",
						"type": "double",
						"size": 1
					}
				]
			}
		]
	},
	"output": {
		"run-path" : "/projects/exasky/VizAly-CBench/build/",

		"output-decompressed": true,
		"output-decompressed-location": "NYX_Travis_",

		"logfname": "runlog_NYX_Travis_",
		"metricsfname": "metrics_NYX_Travis_"
	},
	"compressor-comment": "which compressors to test",
	"compressors": [
		{
			"name": "SZ",
			"output-prefix": "SZ_",
			"compressor-params": [{
					"scalar": [
						"baryon_density",
						"dark_matter_density",
						"temperature"
					],
					"abs": 1E-3
				},
				{
					"scalar": [
						"velocity_x",
						"velocity_y",
						"velocity_z"
					],
					"pw_rel": 1E-2
				}
			]
		}
	],
	"metrics-comment": "which metrics to use",
	"metrics": [{
			"name": "absolute_error"
		},
		{
			"name": "relative_error"
		},
		{
			"name": "mse"
		},
		{
			"name": "psnr"
		}
	],
	"simulation-analysis": {
		"evn_path": "/projects/exasky/HACC.darwin_setup",
		"analysis-folder": "NYX_Travis_",
		"plotting" :
		{
			"x-range" : [0, 11]
		},
		"analysis-tool": {
			"hdf5_path": "/projects/exasky/hdf5/install/bin/",
			"gimlet-home": "/projects/exasky/gimlet2",
			"analytics": [{
					"name": "sim_stats",
					"type": [
						"rhob",
						"rhom",
						"rhodm",
						"temp",
						"velmag",
						"vz"
					],
					"postfix": "_ps3d.txt",
					"path": "/projects/exasky/gimlet2/apps/sim_stats/sim_stats.ex"
				},
				{
					"name": "lya_all_axes",
					"type": [
						"x",
						"y",
						"z"
					],
					"postfix": "_flux_ps1d.txt",
					"path": "/projects/exasky/gimlet2/apps/lya_all_axes/lya_all_axes.ex"
				}
			]
		},
		"input-files": [],
		"analysis": []
	}
}